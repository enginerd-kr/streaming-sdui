{
  "name": "sdui-monorepo",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/enginerd-kr/streaming-sdui"
  },
  "homepage": "https://enginerd-kr.github.io/streaming-sdui",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/website",
    "build": "npm run build --workspaces --if-present",
    "build:packages": "npm run build --workspace=packages/sdui-core && npm run build --workspace=packages/sdui-react",
    "build:website": "npm run build --workspace=apps/website",
    "start": "npm run start --workspace=apps/website",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist apps/*/node_modules apps/*/.next apps/*/out"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5"
  }
}
